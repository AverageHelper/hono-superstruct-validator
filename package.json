{
	"name": "hono-superstruct-validator",
	"version": "0.0.1",
	"description": "Validator middleware using Superstruct.",
	"private": false,
	"scripts": {
		"prebuild": "npm run lint",
		"build": "./node_modules/.bin/tsc -p tsconfig.prod.json",
		"build:clean": "rm -rf dist && npm run build",
		"start": "./node_modules/.bin/nodemon --inspect .",
		"test": "./node_modules/.bin/vitest run",
		"test:watch": "./node_modules/.bin/vitest watch --coverage=false",
		"lint": "./node_modules/.bin/eslint . --ext .ts",
		"lint:fix": "./node_modules/.bin/eslint . --ext .ts --fix",
		"release": "./node_modules/.bin/ts-node --esm -P tsconfig.test.json ./scripts/release.ts",
		"prepublishOnly": "npm run build && npm run release && npm test && npm run release"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AverageHelper/hono-superstruct-validator.git"
	},
	"keywords": [
		"node"
	],
	"author": "Average Helper",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/AverageHelper/hono-superstruct-validator/issues"
	},
	"homepage": "https://github.com/AverageHelper/hono-superstruct-validator#readme",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"engines": {
		"node": "^18.17.0"
	},
	"peerDependencies": {
		"hono": "^3.6.3",
		"superstruct": "^1.0.0"
	},
	"devDependencies": {
		"@types/node": "18.17.11",
		"@types/source-map-support": "0.5.7",
		"@typescript-eslint/eslint-plugin": "6.4.1",
		"@typescript-eslint/parser": "6.4.1",
		"@vitest/coverage-istanbul": "0.34.3",
		"eslint": "8.48.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-config-strictest": "0.8.1",
		"eslint-plugin-deprecation": "1.5.0",
		"eslint-plugin-file-progress": "1.3.0",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "5.0.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "48.0.1",
		"eslint-plugin-vitest": "0.2.8",
		"hono": "3.6.3",
		"keep-a-changelog": "2.3.0",
		"nodemon": "3.0.1",
		"prettier": "3.0.2",
		"semver": "7.5.4",
		"superstruct": "1.0.3",
		"ts-node": "10.9.1",
		"typescript": "4.9.5",
		"vitest": "0.34.3"
	}
}
